<h1>Editing</h1>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>


  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :opinion %>

  <h4><%= f.submit 'Update Book' %></h4>

<%= link_to "show", "/books/#{@book.id}" %>
<%= link_to "back", books_path %>

<% end %>